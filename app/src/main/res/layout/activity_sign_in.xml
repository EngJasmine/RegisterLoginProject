<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/dancing_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Live to learn"
                android:textColor="@color/MidnightBlueBlue"
                android:textSize="50dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="20dp"
                android:text="LOGIN"
                android:textColor="@color/MidnightBlueBlue"
                android:textSize="25dp" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:background="@drawable/round_border"
            android:padding="15dp">

            <EditText
                android:id="@+id/emailSignIn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Email"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:drawableEnd="@drawable/baseline_alternate_email_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"/>


            <EditText
                android:id="@+id/passwordSignIn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="********"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="10sp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"/>

        </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Remember me !"
            android:textColor="@color/DarkSlateBlue"
            android:textSize="13sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/CadeBlue"/>
        <TextView
            android:id="@+id/goToForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="Forget your password ?"
            android:textStyle="bold"
            android:textColor="@color/Gold"
            android:fontFamily="@font/dm_medium"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="You have not an account yet ?"
                android:textColor="@color/MidnightBlueBlue"
                android:fontFamily="@font/dm_bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/goToSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Register"
                android:textColor="@color/Red"
                android:fontFamily="@font/dm_medium"
                android:textStyle="bold"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>