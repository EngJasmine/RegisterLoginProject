<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/dancing_bold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Live to learn"
                android:textColor="@color/MidnightBlueBlue"
                android:textSize="50dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="20dp"
                android:text="FORGET PASSWORD"
                android:textColor="@color/MidnightBlueBlue"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:background="@drawable/round_border"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/dm_bold"
                android:textStyle="italic"
                android:textSize="20dp"
                android:text="Please provide your email for which you want to reset your account."/>


            <EditText
                android:id="@+id/emailForgetPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:drawableEnd="@drawable/baseline_alternate_email_24"
                android:drawablePadding="8dp"
                android:drawableTint="@color/black"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>
        <Button
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:backgroundTint="@color/CadeBlue"
            android:text="Reset my password"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/dm_medium"
            android:textAllCaps="true"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:backgroundTint="@color/CadeBlue"
            android:text="cancel"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/dm_medium"
            android:textAllCaps="true"/>


    </LinearLayout>

</ScrollView>